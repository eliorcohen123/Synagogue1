<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF6347" />
            <gradient android:angle="-90" android:endColor="#FF6347" android:startColor="#FF6347" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF6347" />
            <solid android:color="#FF6347" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF6347" />
            <gradient android:angle="-90" android:endColor="#FF6347" android:startColor="#8dbab3" />
        </shape>
    </item>
</selector>