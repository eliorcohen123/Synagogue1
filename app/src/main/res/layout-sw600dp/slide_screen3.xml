<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_slider_screen3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="הדרכה לאפליקציה\n-\nחלק 3"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="118dp"
            android:layout_marginBottom="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/intorscreen3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="בנוסף, יש לכם אופציות נוספות נהדרות, כגון: לתרום מסודר לבית הכנסת, מיקום בית הכנסת וניווט אליו ממיקומך הנוכחי, קביעת אירועים/אזכרות בבית הכנסת וקביעת תזכורת לתפילה בשעה המדויקת והנוחה לכם!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="38sp" />
    </LinearLayout>
</RelativeLayout>